{
	"format_version": "1.12.0",
	"minecraft:entity": {
		"description": {
			"identifier": "minecraft:hopper_minecart",
			"is_spawnable": false,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
			"minecraft:hopper_active": {
				"minecraft:item_hopper": {},
				"minecraft:rail_sensor": {
					"on_activate": {
						"event": "minecraft:hopper_deactivate"
					}
				}
			},
			"minecraft:hopper_inactive": {
				"minecraft:rail_sensor": {
					"on_deactivate": {
						"event": "minecraft:hopper_activate"
					}
				}
			},
			"minecraft:slow_speed": {
				"minecraft:rail_movement": {
					"max_speed": 0.4
				}
			},
			"minecraft:normal_speed": {
				"minecraft:rail_movement": {
					"max_speed": 1.0
				}
			},
			"minecraft:fast_speed": {
				"minecraft:rail_movement": {
					"max_speed": 2.0
				}
			},
			"minecraft:very_fast_speed": {
				"minecraft:rail_movement": {
					"max_speed": 5.0
				}
			},
			"minecraft:super_fast_speed": {
				"minecraft:rail_movement": {
					"max_speed": 10.0
				}
			}
		},
		"components": {
			"minecraft:type_family": {
				"family": [
					"minecart",
					"inanimate"
				]
			},
			"minecraft:collision_box": {
				"width": 0.98,
				"height": 0.7
			},
			"minecraft:rail_movement": {
				"max_speed": 1
			},
			"minecraft:inventory": {
				"container_type": "minecart_hopper",
				"inventory_size": 5,
				"can_be_siphoned_from": true
			},
			"minecraft:is_stackable": {},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {
				"default_values": {
					"max_optimized_distance": 0,
					"max_dropped_ticks": 0,
					"use_motion_prediction_hints": true
				},
				"conditional_values": [
					{
						"max_optimized_distance": 0,
						"max_dropped_ticks": 0,
						"conditional_values": [
							{
								"test": "is_moving",
								"subject": "self",
								"operator": "==",
								"value": true
							}
						]
					}
				]
			},
			"minecraft:interact": {
				"interactions": [
					{
						"on_interact": {
							"event": "minecraft:speed_menu",
							"target": "self"
						},
						"condition": "query.is_sneaking",
						"use_item": false
					}
				]
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"minecraft:hopper_active",
						"minecraft:normal_speed"
					]
				}
			},
			"minecraft:hopper_activate": {
				"remove": {
					"component_groups": [
						"minecraft:hopper_inactive"
					]
				},
				"add": {
					"component_groups": [
						"minecraft:hopper_active"
					]
				}
			},
			"minecraft:hopper_deactivate": {
				"remove": {
					"component_groups": [
						"minecraft:hopper_active"
					]
				},
				"add": {
					"component_groups": [
						"minecraft:hopper_inactive"
					]
				}
			},
			"minecraft:speed_menu": {
				"run_command": {
					"command": [
						"tellraw @p [\"\",{\"text\":\"Hopper Minecart Speed Options:\\n\",\"color\":\"gold\"},{\"text\":\"0.4 - Slow (Vanilla)\\n\",\"color\":\"gray\",\"clickEvent\":{\"action\":\"run_command\",\"value\":\"/execute @e[type=minecraft:hopper_minecart,c=1] ~~~ event minecraft:set_slow_speed\"}},{\"text\":\"1.0 - Normal (Current)\\n\",\"color\":\"white\",\"clickEvent\":{\"action\":\"run_command\",\"value\":\"/execute @e[type=minecraft:hopper_minecart,c=1] ~~~ event minecraft:set_normal_speed\"}},{\"text\":\"2.0 - Fast\\n\",\"color\":\"green\",\"clickEvent\":{\"action\":\"run_command\",\"value\":\"/execute @e[type=minecraft:hopper_minecart,c=1] ~~~ event minecraft:set_fast_speed\"}},{\"text\":\"5.0 - Very Fast\",\"color\":\"yellow\",\"clickEvent\":{\"action\":\"run_command\",\"value\":\"/execute @e[type=minecraft:hopper_minecart,c=1] ~~~ event minecraft:set_very_fast_speed\"}}]"
					]
				}
			},
			"minecraft:set_slow_speed": {
				"remove": {
					"component_groups": [
						"minecraft:normal_speed",
						"minecraft:fast_speed",
						"minecraft:very_fast_speed",
						"minecraft:super_fast_speed"
					]
				},
				"add": {
					"component_groups": [
						"minecraft:slow_speed"
					]
				},
				"run_command": {
					"command": [
						"tellraw @p [\"\",{\"text\":\"Hopper Minecart speed set to \",\"color\":\"aqua\"},{\"text\":\"0.4\",\"color\":\"gray\",\"bold\":true},{\"text\":\" (Slow)\",\"color\":\"gray\"}]"
					]
				}
			},
			"minecraft:set_normal_speed": {
				"remove": {
					"component_groups": [
						"minecraft:slow_speed",
						"minecraft:fast_speed",
						"minecraft:very_fast_speed",
						"minecraft:super_fast_speed"
					]
				},
				"add": {
					"component_groups": [
						"minecraft:normal_speed"
					]
				},
				"run_command": {
					"command": [
						"tellraw @p [\"\",{\"text\":\"Hopper Minecart speed set to \",\"color\":\"aqua\"},{\"text\":\"1.0\",\"color\":\"white\",\"bold\":true},{\"text\":\" (Normal)\",\"color\":\"white\"}]"
					]
				}
			},
			"minecraft:set_fast_speed": {
				"remove": {
					"component_groups": [
						"minecraft:slow_speed",
						"minecraft:normal_speed",
						"minecraft:very_fast_speed",
						"minecraft:super_fast_speed"
					]
				},
				"add": {
					"component_groups": [
						"minecraft:fast_speed"
					]
				},
				"run_command": {
					"command": [
						"tellraw @p [\"\",{\"text\":\"Hopper Minecart speed set to \",\"color\":\"aqua\"},{\"text\":\"2.0\",\"color\":\"green\",\"bold\":true},{\"text\":\" (Fast)\",\"color\":\"green\"}]"
					]
				}
			},
			"minecraft:set_very_fast_speed": {
				"remove": {
					"component_groups": [
						"minecraft:slow_speed",
						"minecraft:normal_speed",
						"minecraft:fast_speed",
						"minecraft:super_fast_speed"
					]
				},
				"add": {
					"component_groups": [
						"minecraft:very_fast_speed"
					]
				},
				"run_command": {
					"command": [
						"tellraw @p [\"\",{\"text\":\"Hopper Minecart speed set to \",\"color\":\"aqua\"},{\"text\":\"5.0\",\"color\":\"yellow\",\"bold\":true},{\"text\":\" (Very Fast)\",\"color\":\"yellow\"}]"
					]
				}
			},
			"minecraft:set_super_fast_speed": {
				"remove": {
					"component_groups": [
						"minecraft:slow_speed",
						"minecraft:normal_speed",
						"minecraft:fast_speed",
						"minecraft:very_fast_speed"
					]
				},
				"add": {
					"component_groups": [
						"minecraft:super_fast_speed"
					]
				},
				"run_command": {
					"command": [
						"tellraw @p [\"\",{\"text\":\"Hopper Minecart speed set to \",\"color\":\"aqua\"},{\"text\":\"10.0\",\"color\":\"red\",\"bold\":true},{\"text\":\" (Super Fast)\",\"color\":\"red\"}]"
					]
				}
			}
		}
	}
}